<%= render "/pages/navbar" %>

<div class="listing-hero">
<h1>Listing snakes</h1>
</div>

<table id="listing">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Breed name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Deposit</th>
    <th>City</th>
    <th>State</th>
    <th>Date of birth</th>
    <th>Diet</th>

    
    <th colspan="3"></th>
  </tr>

<% @listings.each do |listing|%>
  <tr class="listing-row">
    <td><%= listing.title %></td>
    <td><%= listing.description %></td>
    <td><%= listing.breed.name %></td>
    <td><%= listing.sex %></td>
    <td><%= listing.price %></td>
    <td><%= listing.deposit %></td>
    <td><%= listing.city %></td>
    <td><%= listing.state %></td>
    <td><%= listing.date_of_birth %></td>
    <td><%= listing.diet %></td>



    <td><%= link_to 'Show', listing_path(listing), class:"listing-link"%></td>
    <td><%= link_to 'Edit', edit_listing_path(listing), class:"listing-link"%></td>
    <td><%= link_to 'Destroy', listing_path(listing),
            method: :delete,
            data: { confirm: 'Are you sure sure?'}, class:"listing-link" %></td>
  </tr>




<% end %>
</table>

<br>



<%= render "/pages/footer" %>